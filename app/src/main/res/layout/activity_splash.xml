<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashActivity"
    android:orientation="vertical"
    android:fitsSystemWindows="true">
    <ImageView
        android:id="@+id/im"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@mipmap/lay_up"></ImageView>
    <RelativeLayout
        android:background="@color/color_White"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_150">
        <ImageView
            android:layout_marginLeft="@dimen/dp_110"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@mipmap/ball"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"></ImageView>
        <TextView
            android:textStyle="bold"
            android:id="@+id/tv"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_170"
            android:text="上篮"
            android:textSize="@dimen/sp_38"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
        <TextView
            android:textStyle="normal"
            android:textColor="@color/color_E1DBDB"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_15"
            android:textSize="@dimen/sp_30"
            android:layout_below="@+id/tv"
            android:text="ALL BASKETBALL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
    </RelativeLayout>

</LinearLayout>